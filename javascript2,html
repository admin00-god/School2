<body>
	<div class="container">
		<h2>JavaScript Confirm Box</h2>
		<button onclick="myFunction()">Try it</button>
		<p id="demo"></p>
		
		<script>
			function myFunction() {
				let message;
				if (confirm("Press A Button!")) {
					message = "You Pressed OK!";
				} else {
					message = "You Pressed Cancel!";
				}
				document.getElementById("demo").innerHTML = message;
			}
		</script>
	</div>
</body>
